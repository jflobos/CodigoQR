
 

 <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/flotr2.min.js")" type="text/javascript"></script>
@{
    ViewBag.Title = " Ver Estadisticas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <style type="text/css">
      
      #hola {
        width : 600px;
        height: 384px;
        margin: 8px auto;
      }
    </style>



<script type="text/javascript">
    $(document).ready(function () {
        @{
            var uno = 0;
            var dos = 0;
            var tres = 0;
            var cuatro = 0;
            var cinco = 0;
        var contador = 1;
         foreach (var p in ViewBag.est)
         {
             if(contador==1)
             {
                 uno = @p.Value;
             }
             if (contador == 2)
             {
                 dos = @p.Value;
             }
             if (contador == 3)
             {
                 tres = @p.Value;
             }
             if (contador == 4)
             {
                 cuatro = @p.Value;
             }
             if (contador == 5)
             {
                 cinco = @p.Value;
             }
             

             contador++;
         }
         
         }

        var containerb = document.getElementById("hola");
        var
          d1 = [[0, @uno]],
          d2 = [[0, @dos]],
          d3 = [[0, @tres]],
          d4 = [[0, @cuatro]],
          d5= [[0, @cinco]],
          graph;

        graph = Flotr.draw(containerb, [
          { data: d1, label: 'Invitados', color: 'lightgrey' },
          { data: d2, label: 'Confirmados', color:'green' },
          { data: d3, label: 'Rechazados', color:'red'},
          { data: d4, label: 'Tal vez' , color:'orange' },
          { data: d5, label: 'Asistieron', color:'blue' }
        ], {
            HtmlText: false,
            grid: {
                verticalLines: false,
                horizontalLines: false
            },
            xaxis: { showLabels: false },
            yaxis: { showLabels: false },
            pie: {
                show: true,
                explode: 6
            },
            mouse: { track: true },
            legend: {
                position: 'ne',
                backgroundColor: '#D2E8FF'
            }
        });
    });
    </script>




<div class="container">
<div id="ourCompany-bg"  style="padding:50px; border-bottom:40px;">
<br />
<center><h2>Estadisticas</h2></center>
<br />
    
    <table>
        <tr>

            <td><h3 style="color:orange;">Evento:</h3></td>
            <td><h3 style="color:black;"><b>   "@ViewBag.evento"</b></h3></td>
        </tr>

    </table>
    <br />
    
    <table>
        <tr>
<td>
    <div id="hola"></div>
</td>
<td>
    <table>
        
     @foreach (var p in ViewBag.est)
     {    <tr>
         <td>
         <ul>
         <li><div>@p.Key : @p.Value  </div> </li>
         </ul></td>
         <td><img src="@Url.Content("~/Content/images/excel.png")" width="30" style="cursor:pointer;"  height="30" title="Descargar a excel" alt="Descargar a excel "/></td>
          </tr>
     }
        </table>
     

</td>
        </tr>


    </table>
    
    
    
    
</div>
</div>